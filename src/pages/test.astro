---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { ThemeToggle } from '../components/ThemeToggle';
import { LanguageSelector } from '../components/LanguageSelector';
import HydrationWrapper from '../components/HydrationWrapper.astro';
---

<BaseLayout title="Test Components - LexMX">
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white">Component Test Page</h1>
    
    <div class="space-y-8">
      <div>
        <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Theme Toggle:</h2>
        <HydrationWrapper name="theme-toggle-test" width="44px" height="40px">
          <ThemeToggle client:load />
        </HydrationWrapper>
      </div>
      
      <div>
        <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Language Selector:</h2>
        <HydrationWrapper name="language-selector-test" width="100px" height="40px">
          <LanguageSelector client:load />
        </HydrationWrapper>
      </div>
      
      <div>
        <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Both Together:</h2>
        <div class="flex items-center space-x-4">
          <HydrationWrapper name="language-selector-test-2" width="100px" height="40px">
            <LanguageSelector client:load />
          </HydrationWrapper>
          <HydrationWrapper name="theme-toggle-test-2" width="44px" height="40px">
            <ThemeToggle client:load />
          </HydrationWrapper>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>