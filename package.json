{
  "name": "lexmx",
  "type": "module",
  "version": "1.0.0",
  "description": "Mexican Legal AI Assistant with RAG technology",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "type-check": "astro check && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --config=playwright.e2e.config.ts",
    "test:integration": "playwright test --config=playwright.config.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "build:corpus": "node scripts/build-corpus.js",
    "build:embeddings": "node scripts/generate-embeddings.js",
    "download:embeddings": "node scripts/download-embeddings.js",
    "demo:record": "npx tsx scripts/generate-demo.ts full",
    "demo:quick": "npx tsx scripts/generate-demo.ts quick",
    "demo:chat": "npx tsx scripts/generate-demo.ts chat",
    "demo:screenshots": "npx tsx scripts/generate-demo.ts --screenshots",
    "demo:update": "npm run demo:record && npm run demo:screenshots",
    "demo:headed": "npx tsx scripts/generate-demo.ts full --headed"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.2",
    "@astrojs/tailwind": "^5.1.0",
    "@mlc-ai/web-llm": "^0.2.79",
    "@nanostores/persistent": "^1.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@xenova/transformers": "^2.17.2",
    "astro": "^4.15.9",
    "events": "^3.3.0",
    "nanostores": "^1.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/sitemap": "^3.1.6",
    "@playwright/test": "^1.47.2",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "astro-compress": "^2.3.1",
    "axe-playwright": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "vite": "^5.4.7",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
